{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <div class="jumbotron">
        <h1>Connexion</h1>
        {% for message in app.flashes('error') %}
            <div class="alert alert-danger">
                {{ message }}
            </div>
        {% endfor %}
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
    </div>
    <div class="container">
        <div class="col-xs-12 col-lg-7 col-md-7">
            {% if error %}
                <div class="alert alert-danger">
                    Pseudo ou mot de passe incorrect
                </div>
            {% endif %}
            <form action="{{ path('security_login') }}" method="post">
                <div class="form-group">
                    <label>Pseudo</label>
                    <input placeholder="Pseudo ..." type="text" required name="_username" class="form-control" value="{{ lastUsername }}">
                </div>
                <div class="form-group">
                    <label>Mot de passe</label>
                    <input placeholder="Password ..." type="password" required name="_password" class="form-control">
                </div>
                <a href="" data-toggle="modal" data-target="#myModal">Mot de passe oublié ?</a>
                <div class="form-group">
                    <button type="submit" class="btn btn-success">Connexion</button>
                </div>
            </form>


            <!-- The Modal -->
            <form action="{{ path('mdpOublie') }}" method="post">
                <div class="modal" id="myModal">
                    <div class="modal-dialog">
                        <div class="modal-content">

                            <!-- Modal Header -->
                            <div class="modal-header">
                                <h4 class="modal-title">Mot de passe oublié</h4>
                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                            </div>

                            <!-- Modal body -->
                            <div class="modal-body">
                                <h5>Entre ton pseudo</h5>
                                <input type="text" placeholder="Pseudo ..." name="_username" class="form-control">
                            </div>

                            <!-- Modal footer -->
                            <div class="modal-footer">
                                <button type="submit" class="btn btn-success">Envoyer</button>
                                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                            </div>

                        </div>
                    </div>
                </div>
            </form>


        </div>
    </div>
{% endblock %}