{% extends 'base.html.twig' %}

{% block title %}Regroupement{% endblock %}

{% block body %}
    <div class="jumbotron">
        <h1>Association</h1>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-lg-7 col-md-7 text-center">
                <h3 class="result"></h3>
                <h4 class="enonce mb-4">Associe chaque élément au bon groupe.</h4>
                {% for answer in answers | shuffle() %}
                    <h3 name="{{ answer.question.name }}" class="response">{{ answer.name }}</h3>
                {% endfor %}
                {% set index = 0 %}
                {% for question in activity.questionsGroupes | batch(2) %}
                    <div class="row">
                        <div class="col-6 col-sm-6 col-lg-6 col-md-6">
                            <button name="{{ question[index+0].name }}" class="btn btn-primary groups w-100 mb-3">{{ question[index+0].name }}</button>
                        </div>
                        <div class="col-6 col-sm-6 col-lg-6 col-md-6">
                            {% if question[index+1] is defined %}
                                <button name="{{ question[index+1].name }}" class="btn btn-primary groups w-100 mb-3">{{ question[index+1].name }}</button>
                            {% endif %}
                        </div>
                    </div>
                    {% set index = index+2 %}
                {% endfor %}
                <a href="{{ path('correction_groups', { 'id' : activity.id}) }}" class="final d-none">final</a>
                <a href="{{ path('activity_association', { 'id' : activity.id}) }}" class="d-none lienActivite">Refaire l'activité</a>
            </div>
        </div>
    </div>



{% endblock %}

{% block javascripts %}
    <script src="/documents/axios.min.js"></script>
    <script src="/JS/groupementEleve.js"></script>
{% endblock %}