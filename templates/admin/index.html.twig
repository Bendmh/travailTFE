{% extends 'base.html.twig' %}

{% block title %}Type d'activité{% endblock %}

{% block body %}
    <div class="jumbotron">
        <h1>Types d'activités possibles</h1>
    </div>
    <div class="container">
        <div class="col-xs-12 col-lg-6 col-md-6">
            <ul class="list-group">
                {% for type in activity_types %}
                        <li class="list-group-item">
                            {{ type.name }}
                            <a href="{{ path('edit_type_activity', {'id' : type.id}) }}"><button class="btn btn-primary">Editer</button></a>
                            <a href="{{ path('delete_type_activity', {'id' : type.id}) }}"><button  class="btn btn-danger">Supprimer</button></a>
                        </li>
                {% endfor %}
            </ul>
            <a href="{{ path('new_type_activity') }}"><button class="btn btn-primary mt-4">Ajouter un type d'activité</button></a>
        </div>
    </div>
{% endblock %}
